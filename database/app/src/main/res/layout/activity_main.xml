<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Add"
            android:layout_width="113dp"
            android:layout_height="69dp" android:id="@+id/addBtn" android:layout_weight="1"
            android:layout_toStartOf="@+id/viewBtn" android:layout_marginEnd="71dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="310dp"
            android:layout_alignParentStart="true" android:layout_marginStart="60dp"/>
    <EditText
            android:layout_width="359dp"
            android:layout_height="174dp"
            android:inputType="textPersonName"
            android:text="Enter task"
            android:ems="10"
            android:id="@+id/inputTask"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="25dp"
            android:layout_above="@+id/addBtn" android:layout_marginBottom="88dp"
            android:layout_alignParentEnd="true" android:layout_alignParentStart="true" android:layout_marginTop="90dp"
            android:layout_alignParentTop="true" android:textColor="#E91E63" android:typeface="serif"
            android:textAlignment="center"/>
    <Button
            android:text="View"
            android:layout_width="107dp"
            android:layout_height="78dp" android:id="@+id/viewBtn" android:layout_weight="1"
            android:layout_alignParentBottom="true" android:layout_marginBottom="301dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="60dp"/>
    <EditText
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber" android:layout_alignParentBottom="true"
            android:layout_marginBottom="119dp" android:layout_marginEnd="38dp"
            android:layout_alignParentStart="true" android:layout_marginStart="103dp"
            android:layout_toStartOf="@+id/button_del"/>
    <Button
            android:text="Finish "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_del" android:layout_alignParentBottom="true"
            android:layout_marginBottom="119dp" android:layout_marginEnd="119dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>